package com.jesseboyd.warGame;

import java.util.ArrayList;
import java.util.Iterator;
import java.util.List;

public class Card implements Deck {

	public String getTitle() {
		return "i am a war card";
	}

	private int totalCards;
	private List<Integer> deckOfCards;
	private int numberOfRanks;

	public void create(int numberOfSuits, int numberOfRanks) {
		this.numberOfRanks=numberOfRanks;
		totalCards = numberOfSuits * numberOfRanks;
		deckOfCards = new ArrayList<Integer>();
		for(int i=0; i < numberOfSuits ; i++){
			for(int s=0; s < numberOfRanks; s++){
		deckOfCards.add(s);
		}
		}
			
	}

	public void shuffle() {
		int cardValue = 1;
		for (int i = 0; i < deckOfCards.length; i++) {

			cardValue = deckOfCards[i];
			cardValue++;
			if (cardValue > numberOfRanks) {
				cardValue = 1;

			}
		}
		// TODO Auto-generated method stub

	}

	public Card deal() {
		// TODO Auto-generated method stub
		return null;
	}

	public List<Integer> getDeckOfCards() {
		return deckOfCards;
	}
	
	

}
