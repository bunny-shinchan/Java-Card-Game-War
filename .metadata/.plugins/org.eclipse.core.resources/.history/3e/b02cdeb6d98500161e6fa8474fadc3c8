package com.jesseboyd.warGame;

import java.io.Console;

import sun.applet.Main;

public class WarApp {

	
	public static void main(String[] args) {
			
		Console c = System.console();
	     if (c == null) {
	            System.err.println("No console.");
	            System.exit(1);
	        }

	        int numPlayers = Integer.valueOf(c.readLine("Enter number of players: "));
	        int numSuits = Integer.valueOf(c.readLine("Enter number of Suits: "));
	        int numRanks = Integer.valueOf(c.readLine("Enter number of Ranks: "));
		
	        play(numSuits, numRanks, numPlayers );
	}
	

	
	public void play(int numberOfSuits, int numberOfRanks, int numberOfPlayers) {
		Deck deck = new Deck();
		deck.create(numberOfSuits, numberOfRanks);
		deck.shuffle();
		deck.deal(numberOfPlayers);
		
	}	

	
	
}
