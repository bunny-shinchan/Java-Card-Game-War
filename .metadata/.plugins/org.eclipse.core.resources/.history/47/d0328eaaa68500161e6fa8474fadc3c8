package com.jesseboyd.warGame;

import java.util.ArrayList;
import java.util.Iterator;
import java.util.List;
import java.util.Random;

public class Card implements Deck {

	public String getTitle() {
		return "i am a war card";
	}

	private int totalCards;
	private List<Integer> deckOfCards;
	private int numberOfRanks;

	public void create(int numberOfSuits, int numberOfRanks) {
		this.numberOfRanks=numberOfRanks;
		this.totalCards = numberOfSuits * numberOfRanks;
		deckOfCards = new ArrayList<Integer>();
		for(int i=0; i < numberOfSuits ; i++){
			for(int s=0; s < numberOfRanks; s++){
		deckOfCards.add(s);
		}
		}
			
	}

	public void shuffle() {
		int maximum = deckOfCards.size();
		
		// shuffle same amount as there are cards
		for (int i = 0; i < maximum; i++) {
			int minimum = 0;
			Random rand = new Random();
			int randomNum = minimum + rand.nextInt((maximum - minimum) + 1);
			//pull random indexed card and add it to the end of the ArrayList
			int pullCard = deckOfCards.get(randomNum);
			deckOfCards.remove(randomNum);
			deckOfCards.add(pullCard);
			}
		}



	public Card deal() {
		// TODO Auto-generated method stub
		return null;
	}

	public List<Integer> getDeckOfCards() {
		return deckOfCards;
	}


	

}
